<body>
    <div class="container mt-4">
        <h2 class="mb-3">User List</h2>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th style="width:150px">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < dataTable.length; i++) { %>
                <tr>
                    <td><%= dataTable[i].email %></td>
                    <td><%= dataTable[i].firstName %></td>
                    <td><%= dataTable[i].lastName %></td>
                    <td><%= dataTable[i].address %></td>
                    <td>
                        <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn btn-sm btn-warning">Edit</a>
                        <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
